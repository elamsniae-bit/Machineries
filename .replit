modules = ["web", "php-8.2", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["mariadb"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Netlify Dev Server"

[[workflows.workflow]]
name = "Netlify Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd netlify-build && npx netlify dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
