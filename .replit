modules = ["web", "php-8.2", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["mariadb"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Netlify Dev"

[[workflows.workflow]]
name = "Netlify Dev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd netlify-build && npx netlify dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3999
externalPort = 3001
exposeLocalhost = true

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8888
externalPort = 3002

[[ports]]
localPort = 33039
externalPort = 4200

[[ports]]
localPort = 40343
externalPort = 3000

[[ports]]
localPort = 41579
externalPort = 3003

[deployment]
deploymentTarget = "vm"
run = ["php", "-S", "0.0.0.0:5000"]
